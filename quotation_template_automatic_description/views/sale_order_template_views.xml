<?xml version="1.0"?>
<odoo>

    <record id="sale_order_template_description_view_form" model="ir.ui.view">
        <field name="name">sale.order.template.description.form.inherit</field>
        <field name="model">sale.order.template</field>
        <field name="inherit_id" ref="sale_management.sale_order_template_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page/field[@name='sale_order_template_line_ids']/tree/field[@name='name']" position="after">
                <field name="auto_update_description" widget="boolean_toggle" optional="show"/>
            </xpath>
            <xpath expr="//page/field[@name='sale_order_template_line_ids']/tree/field[@name='name']" position="attributes">
                <attribute name="attrs">{'readonly': [('auto_update_description', '=', True)]}</attribute>
                <attribute name="force_save">True</attribute>
            </xpath>
            <field name="company_id" position="after">
                <field name="auto_update_description_updated" />
            </field>
            <xpath expr="//page/field[@name='sale_order_template_line_ids']" position="before">
                <div class="alert alert-info text-center" role="alert" attrs="{'invisible': [('auto_update_description_updated', '=', False)]}">
                    Description on the line will be automatically updated from Product.
                </div>
            </xpath>
        </field>
    </record>

</odoo>